{% embed 'partials/base.html.twig' %} 

{% set collection = page.collection() %}

{% block content %}
<section class="section--intro">
{% if header.introduction %}
	<div class="grid">
		<div class="grid__item grid__item-3-4">
			<p class="paragraph-jumbo">{{ header.introduction }}</p>
		</div>
	</div>
{% endif %}
</section>

<div class="section section--spaced">
	<div class="grid">
		{% for child in page.find('/projects').children %}
		<div class="grid__item grid__item-1-2">
			{% include 'partials/project_card.html.twig' with {'blog':page, 'page':child} %}
		</div>
		{% endfor %}
	</div>
</div>
{% endblock %}

{% endembed %}