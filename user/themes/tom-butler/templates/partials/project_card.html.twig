<a href="{{ page.url }}" class="project-card">

    {% for file in page.header.thumbnail %}
    <span class="project-card__image">
        <img src="{{ file.path }}">
    </span>
    {% endfor %}

    <span class="project-card__content">
        <h4 class="project-card__heading">{{ page.title }}</h4>
        <ul class="project-card__tag-list">
            {% for tag in page.taxonomy.tag %}
            <li class="project-card__tag">{{ tag }}</li>
            {% endfor %}
        </ul>
    </span>
</a>